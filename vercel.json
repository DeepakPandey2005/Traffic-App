{
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    },
    {
      "src": "dist/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/posts/(.*)", 
      "dest": "index.js"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|ttf|woff|woff2|json))$",
      "dest": "dist/$1"
    },
    {
      "src": "/(.*)",   
      "dest": "dist/index.html"
    }
  ]
}
